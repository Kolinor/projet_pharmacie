//---------------------------------------------------------------------------

#pragma hdrstop

#include "tapiris.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)

tapiris::tapiris()
{
	pmodBus = new modBus();
}

tapiris::~tapiris()
{
    delete pmodBus;
}

bool tapiris::connected(string adress, unsigned short port)
{
	bool connected = pmodBus->connected(adress,port);
	return connected;
}

bool tapiris::activePiston(int piston)
{
	bool verif = false;
	unsigned int pist;
	if (piston == 1) {
		pist = 0006;
	}
	if (piston == 2) {
		pist = 0007;
	}
	if (piston == 3) {
		pist = 0005;
	}
	if (piston <= 3 && piston >= 1) {
		verif = pmodBus->writeWord(pist,0001);
		Sleep(1000);
		pmodBus->writeWord(pist,0000);
	}
	return verif;
}

DWORD WINAPI tapiris::Thread_no_1( LPVOID lpParam )
{
	tapiris * thisThread = (tapiris*)lpParam;


}


