//---------------------------------------------------------------------------
#include <iostream>
#include <WS2tcpip.h>
#include <string>

#pragma comment(lib, "ws2_32.lib")

using namespace std;

#ifndef tcpClientH
#define tcpClientH
//---------------------------------------------------------------------------

class tcpClient
{
	private:
		WSADATA data;
		SOCKET sock;
		sockaddr_in hint;
		char buffer[4096];


	public:
		tcpClient();
		~tcpClient();
		bool connected(string adress, unsigned short port);
		bool sendString(string userInput);
		string readString();
		bool sendChar(char * buffer, int length);


};

#endif
