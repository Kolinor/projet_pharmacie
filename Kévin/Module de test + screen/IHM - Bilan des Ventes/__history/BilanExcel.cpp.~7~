Excel::Excel()
{
	ofstream fichierBilan("D:/Utilisateur/Kevin/Bureau/Bilan des ventes.csv", ios::out) ;

	if (fichierBilan)
	{
		fichierBilan << "Médicaments" << ";;" << "Quantité vendu" << ";;" << "Prix\n";
	}

	else
		cerr << "Erreur à l'ouverture du fichier Bilan des ventes" << endl ;
}

