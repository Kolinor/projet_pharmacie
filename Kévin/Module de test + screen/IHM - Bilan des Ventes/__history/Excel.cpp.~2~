bool ecrire_FichierExcel::ouvrirFichier()
{
	ofstream fichier("C:/Utilisateurs/Kevin/Bureau/Test Lecteur Code Barre/IHM - Bilan des Ventes/Fichier Excel/Test.xlsx", ios::out) ;
	// ofstream fichier("Test.xlsx", ios::out) ;

	if (fichier)
	{
		fichier.close();
	}

	else
		cerr << "Erreur à l'ouverture !" << endl ;

	return 0 ;
}

