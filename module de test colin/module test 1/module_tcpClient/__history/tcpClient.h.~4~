//---------------------------------------------------------------------------
#include <iostream>
#include <WS2tcpip.h>
#include <string>

#pragma comment(lib, "ws2_32.lib")

using namespace System;
using namespace std;

#ifndef tcpClientH
#define tcpClientH
//---------------------------------------------------------------------------

class tcpClient
{
	private:
		string adress;
		unsigned short port;
		WSADATA data;
		SOCKET sock;
		sockaddr_in hint;
		char buffer[4096];
		string userInput;

	public:
		tcpClient();
		bool connected(string adress, unsigned short port);
		bool send(string userInput);
		string read();


};

#endif
